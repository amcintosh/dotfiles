# status line at the bottom
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

# visable bell
vbell_msg "beep"

# Change scrollback to 10000 lines
defscrollback 10000

# Automatically detach on hangup
autodetach on          
